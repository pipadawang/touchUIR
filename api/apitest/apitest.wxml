<view class='pa'>
  <view class="grid">

        <view class="card2" wx:for="{{news}}" data-id="{{index}}">
          <view>
            <text class="title">{{ item.title }}</text>
          </view>         
            <view style="margin-bottom;padding:0rpx;border-bottom:2pX solid #e0e0e0;margin-top: 10rpx"></view>
            <view>
              <text class="tag">发布时间：{{item.publishDateStr[0]}}{{item.publishDateStr[1]}}{{item.publishDateStr[2]}}{{item.publishDateStr[3]}}{{item.publishDateStr[4]}}{{item.publishDateStr[5]}}{{item.publishDateStr[6]}}{{item.publishDateStr[7]}}{{item.publishDateStr[8]}}{{item.publishDateStr[9]}}</text>
            </view>
            <view>
              <text class="tag">作者: {{item.posterScreenName}}</text>
            </view>
            <view class="content">
              <view class="covs2">
                <text class="content2">{{item.content}}</text>              
              </view>
          </view>
        </view>
  </view>
</view>

