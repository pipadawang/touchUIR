<view class='pa'>
  <view class="grid">
    <scroll-view scroll-x>
      <view class='hor'>
        <view class="card" wx:for="{{relist}}" data-id="{{index}}">
          <view>
            <text class="title">{{ item.title }}</text>
          </view>

          <view wx:for="{{relist[index].tr}}">
            <view style="margin-bottom;padding:0rpx;border-bottom:2pX solid #e0e0e0;margin-top: 10rpx"></view>
            <view>
              <text class="tag">比赛时间：{{item.time[6]}}{{item.time[7]}}{{item.time[8]}}{{item.time[9]}}{{item.time[10]}}</text>
            </view>
            <view class="content">
              <view class="covs">
                <text class="tag1">{{item.player1}}</text>
                <text class="dovs">{{item.score}}</text>
                <text class="tag2">{{item.player2}}</text>
              </view>
            </view>

          </view>
        </view>
      </view>
    </scroll-view>

  </view>
</view>

